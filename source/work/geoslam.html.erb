	<%= image_tag 'geo-bg.jpg', :class => "bg", :alt => "GeoSLAM Background" %>
	<div class="wrapper">
		<h1><span class="hp-title-one case-study-header__small">Case study</span><span class="hp-title-two"><br />GeoSLAM</span></h1>
	</div><!--end wrapper-->
</section>

<section class="main-screen">
	<div class="wrapper">
		<div class="overlay header-video">
